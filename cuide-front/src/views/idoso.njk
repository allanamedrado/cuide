{% extends "home.njk" %}

{% block content %}
    <h1>Cadastro</h1>
    <form action="/savepoint" method ="POST">
        <main class="form-cuidador">

            <div class="field-group">
                <div class="field">
                    <label for="name">Nome Completo</label>
                    <input type="text" name="name" required="required">
                </div>

                <div class="field">
                    <label for="name">CPF</label>
                    <input type="text" name="cpf"
			                pattern="\d{3}\.\d{3}\.\d{3}-\d{2}"
			                title="Digite um CPF no formato: xxx.xxx.xxx-xx" required="required">
                </div>
            </div>

            <div class="field-group">
                <div class="field">
                    <label for="name">Data de nascimento</label>
                    <input type="date" name="birth" required="required">
                </div>

                <div class="field">
                    <label for="name">Email</label>
                    <input type="email" name="mail" required="required">
                </div>

                <div class="field">
                    <label for="name">Crie um nome de usu√°rio</label>
                    <input type="text" name="username" required="required">
                </div>

                <div class="field">
                    <label for="name">Crie uma senha</label>
                    <input type="password" name="password" required="required">
                </div>
            </div>

            <button class="button-save">Salvar</button>
        </main>
    </form>
{% endblock %}